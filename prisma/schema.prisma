generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String?
  access_token             String?
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String?
  session_state            String?
  refresh_token_expires_in Int?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                 String         @id @default(cuid())
  name               String?
  email              String?        @unique
  emailVerified      DateTime?
  image              String?
  encryptedPageToken String?
  pageId             String?
  accounts           Account[]
  rules              AutoPostRule[]
  posts              Post[]
  products           Product[]
  sessions           Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Product {
  id           String         @id @default(cuid())
  name         String
  description  String
  imageUrls    String[]
  createdAt    DateTime       @default(now())
  lastPostedAt DateTime?
  userId       String
  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  rules        AutoPostRule[] @relation("AutoPostRuleToProduct")
  infographicLink String? @map("infographic_link")

}

model AutoPostRule {
  id             String    @id @default(cuid())
  ruleName       String
  platform       String
  scheduleTime   String
  frequency      String
  promptTemplate String
  status         String    @default("ACTIVE")
  preview        Json?
  nextRunAt      DateTime?
  lastRunAt      DateTime?
  userId         String
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  posts          Post[]
  products       Product[] @relation("AutoPostRuleToProduct")
}

model Post {
  id           String       @id @default(cuid())
  postUrl      String?
  pageId       String?
  pageName     String?
  views        Int          @default(0)
  interactions Int          @default(0)
  shares       Int          @default(0)
  comments     Int          @default(0)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  lastSyncedAt DateTime?
  ruleId       String
  userId       String
  rule         AutoPostRule @relation(fields: [ruleId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([ruleId])
  @@index([userId])
  @@index([createdAt])
  @@index([pageId])
}
