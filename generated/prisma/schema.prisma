// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma" // Giữ nguyên cấu hình output của bạn
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Necessary for Next auth
model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String?
  access_token             String?
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String?
  session_state            String?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  refresh_token_expires_in Int?

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  // --- BẮT ĐẦU THAY ĐỔI ---
  // Thêm các trường này để lưu token Facebook
  encryptedPageToken String?
  pageId             String?

  // Giữ lại của NextAuth
  accounts Account[]
  sessions Session[]

  // Thêm quan hệ với Product và Rule (thay cho 'posts')
  products Product[]
  rules    AutoPostRule[]
  posts    Post[] // Quan hệ với bài đăng
  // --- KẾT THÚC THAY ĐỔI ---
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- BẮT ĐẦU MODEL MỚI ---

model Product {
  id           String    @id @default(cuid())
  name         String
  description  String
  imageUrls    String[] // Thay đổi từ imageUrl sang imageUrls (mảng)
  createdAt    DateTime  @default(now()) // Thời gian tạo
  lastPostedAt DateTime? // Dùng để xoay vòng sản phẩm

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  rules AutoPostRule[]
}

model AutoPostRule {
  id             String @id @default(cuid())
  ruleName       String
  platform       String // "FACEBOOK", "EMAIL"
  scheduleTime   String // "09:00"
  frequency      String // "DAILY", "WEEKLY"
  promptTemplate String
  status         String @default("ACTIVE")
  preview        Json? // Lưu cache preview mới nhất của rule

  nextRunAt DateTime? // Thời gian chạy tiếp theo
  lastRunAt DateTime? // Lần chạy cuối

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  products Product[]
  posts    Post[] // Quan hệ với bài đăng
}

model Post {
  id           String    @id @default(cuid())
  postUrl      String? // URL bài đăng trên Facebook Page/Email
  pageId       String? // ID của Facebook Page (từ user.pageId)
  pageName     String? // Tên Facebook Page (để hiển thị)
  views        Int       @default(0) // Lượt xem
  interactions Int       @default(0) // Tổng tương tác (like, love, etc.)
  shares       Int       @default(0) // Lượt chia sẻ
  comments     Int       @default(0) // Số lượng comment
  createdAt    DateTime  @default(now()) // Thời gian tạo bài đăng
  updatedAt    DateTime  @updatedAt // Thời gian cập nhật cuối
  lastSyncedAt DateTime? // Lần cuối đồng bộ dữ liệu từ Graph API

  // Quan hệ với quy tắc
  rule   AutoPostRule @relation(fields: [ruleId], references: [id], onDelete: Cascade)
  ruleId String

  // Quan hệ với user (để dễ query)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  @@index([ruleId])
  @@index([userId])
  @@index([createdAt])
  @@index([pageId])
}

// --- KẾT THÚC MODEL MỚI ---
